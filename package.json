{
  "name": "dsxpert",
  "displayName": "DSXpert",
  "description": "AI-powered data structure optimization for VS Code",
  "version": "1.0.1.0",
  "publisher": "devsimplify",
  "icon": "./media/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/patiltrupti6105/DSXpert"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:dsxpert.optimizeCode",
    "onCommand:dsxpert.validateSyntax"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dsxpert.optimizeCode",
        "title": "Optimize Code"
      },
      {
        "command": "dsxpert.validateSyntax",
        "title": "Validate Syntax"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "dsxpert.chatView",
          "name": "DSXpert Chat"
        }
      ]
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "child_process": "^1.0.2",
    "diff": "^7.0.0",
    "dotenv": "^16.3.1",
    "fs": "^0.0.1-security",
    "highlight.js": "^11.8.0",
    "openai": "^4.85.4",
    "prettier": "^3.2.5"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.5",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test",
    "build":"tsc"
  }
}
